@model WebBanQuanAo.Models.CreateAccountViewModel
@{
    ViewBag.Title = "Profile";
}

<link rel="stylesheet" type="text/css" href="~/Content/assets/styles/main_styles.css">

<style>
    .news_section_container {
        margin-top: 150px;
    }

    .row-item-new {
        margin-bottom: 20px;
    }

    .title-news {
        font-size: 24px;
        border-bottom: 1px solid;
        padding: 15px 0;
        margin-bottom: 25px;
    }

    .img-box img {
        max-width: 100%;
        max-height: 100%;
    }
</style>

<div class="container news_section_container" style="margin-top: 200px;">
    <div class="row">
        <div class="col-md-12">
            <h2>Thông tin cá nhân</h2>
            @using (Html.BeginForm("PostProfile", "Account", FormMethod.Post))
            {
                @Html.ValidationSummary(true)
                @Html.AntiForgeryToken()
                <input type="hidden" class="form-control" id="exampleInputEmail1" name="UserName" value="@Model.UserName" aria-describedby="emailHelp" />
                <div class="form-group">
                    <label for="FullName">Họ tên đầy đủ</label>
                    <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" aria-describedby="emailHelp" />
                </div>
                <div class="form-group">
                    <label for="Phone">Số điện thoại</label>
                    <input type="text" class="form-control" id="Phone" name="Phone" value="@Model.Phone" aria-describedby="emailHelp" />
                    @Html.ValidationMessageFor(model => model.Phone, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <label for="Address">Địa chỉ</label>
                    <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" aria-describedby="emailHelp" />
                </div>
                <div class="form-group">
                    <label for="Email">Địa chỉ Email</label>
                    <input type="text" class="form-control" id="Email" name="Email" value="@Model.Email" aria-describedby="emailHelp" />
                    @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-success" style="cursor: pointer;">Lưu</button>
                </div>
            }
        </div>
    </div>
</div>
