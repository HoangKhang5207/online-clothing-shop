
@model IEnumerable<WebBanQuanAo.Models.ShoppingCartItem>

    @if (Model != null && Model.Any())
    {
        <h3>GIỎ HÀNG <span style="float: right;"><small>@Model.Count()</small></span></h3>
        var i = 0;
        var tongTien = decimal.Zero;
        <div style="border: 1px solid #808080">
            <table class="table table-borderless">
                @foreach (var item in Model)
                {
                    tongTien += item.TotalPrice;
                    <tr>
                        <td width="140">@item.ProductName</td>
                        <td>@WebBanQuanAo.Common.Common.FormatNumber(item.Price, 0) đ</td>
                    </tr>
                }
                <tr>
                    <td width="140">Tổng tiền</td>
                    <td>@WebBanQuanAo.Common.Common.FormatNumber(tongTien, 0) đ</td>
                </tr>
            </table>
        </div>
    }
    else
    {

    }
