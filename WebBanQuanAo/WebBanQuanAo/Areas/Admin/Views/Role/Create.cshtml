@using Microsoft.AspNet.Identity.EntityFramework;
@model IdentityRole
@{
    ViewBag.Title = "Thêm mới Quyền";
}

@section NaviHeader {
    <!-- Left navbar links -->
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Home/" class="nav-link">Trang chủ</a>
        </li>
        <li class="nav-item d-none d-sm-inline-block">
            <a href="/Admin/Role/" class="nav-link">Danh sách Quyền</a>
        </li>
    </ul>
}

<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Thêm mới Quyền</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/Admin/Role/">Quyền</a></li>
                    <li class="breadcrumb-item active">Thêm mới</li>
                </ol>
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content bg-dark">

    <!-- Default box -->
    <div class="card bg-dark">
        <div class="card-header">
            <h3 class="card-title">Thêm mới Quyền</h3>
        </div>
        <div class="card-body">
            @using (Html.BeginForm("Create", "Role", FormMethod.Post))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true)
                <div class="form-group">
                    <label>Tên quyền</label>
                    @Html.TextBoxFor(r => r.Name, new { @class = "form-control text-light", @style = "background-color: #222831;" })
                </div>
                <div class="form-group">
                    <button type="submit" class="btn btn-primary">Thêm</button>
                    <a href="/admin/role" class="btn btn-danger">Quay lại</a>
                </div>
            }
        </div>
        <!-- /.card-body -->
        <div class="card-footer">
            Thêm mới Quyền
        </div>
        <!-- /.card-footer-->
    </div>
    <!-- /.card -->

</section>
<!-- /.content -->
